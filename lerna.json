{
  "packages": ["packages/*"],
  "version": "0.0.0",
  "extendCommands": ["lerna-command-toc"],
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish"
    },
    "bootstrap": {
      "hoist": ["jest", "typescript"],
      "npmClientArgs": []
    }
  },
  "ignoreChanges": ["**/__fixtures__/**", "**/__tests__/**", "**/package.json"]
}
