{
  "name": "form-it",
  "packagePrefix": "@form-it/",
  "version": "1.0.0",
  "private": true,
  "description": "High Performance Form Component",
  "author": "imcuttle <imcuttle@163.com>",
  "scripts": {
    "new": "npx edam",
    "example": "cd example && npx webpack serve",
    "example:build": "cd example && npx webpack",
    "test": "npx jest",
    "test:watch": "npm test -- --watch",
    "bootstrap": "npx lerna bootstrap",
    "release": "npx lerna publish --conventional-commits -m 'chore(release): publish'"
  },
  "edam": {
    "source": "pkg",
    "alias": {
      "pkg": {
        "description": "新建package的模板",
        "type": "file",
        "url": "./packages/__template",
        "config": {
          "output": "./packages/"
        }
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lerna toc && git add README.md && pretty-quick --staged",
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
    }
  },
  "sideEffects": false,
  "engines": {
    "node": ">=10"
  },
  "keywords": [
    "imcuttle",
    "form",
    "it",
    "form-it"
  ],
  "main": "lib",
  "types": "types",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/imcuttle/form-it.git"
  },
  "module": "es",
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.jsx?$": "babel-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testMatch": [
      "**/__test{s,}__/*.(spec|test).{t,j}s{x,}"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/history": "^4.7.8",
    "@types/jest": "^26.0.15",
    "@types/react": "^17.0.0",
    "antd": "^4.9.1",
    "change-case": "^4.1.1",
    "commander": "^6.2.0",
    "concurrently": "^5.3.0",
    "conventional-changelog-cli": "^2.1.1",
    "copyfiles": "^2.4.1",
    "css-loader": "^5.0.1",
    "edam-cli": "^3.3.11",
    "html-webpack-plugin": "^4.5.0",
    "human-format": "^0.11.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lerna-cli": "^3.0.0",
    "lerna-command-toc": "^1.0.1",
    "less": "^3.12.2",
    "less-loader": "^7.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.0",
    "pretty-quick": "^3.1.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "rimraf": "^3.0.2",
    "sass": "^1.29.0",
    "sass-loader": "^10.1.0",
    "style-loader": "^2.0.0",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.11",
    "typescript": "^4.1.2",
    "webpack": "^5.9.0",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0"
  }
}
